extends ../layout 

block main
    section(class="section")
        div(class="columns is-mobile")
            div(class="column")
                    div(class="container")
                        div(class="content")
                            section(cless="section")
                                h2= infodb.device_name
                                h6 제조사
                                p= infodb.device_manufacturer
                                h6 모델명 
                                p= infodb.device_model
                                h6 시리얼 번호
                                p= infodb.device_serial
                                h6 IMEI
                                p= infodb.device_imei
                                h6 OS 종류 
                                p= infodb.device_ostype
                                h6 OS 버전 
                                p= infodb.device_osversion
                                h6 취득일 
                                p= infodb.device_get_dt
                                h6 자산 코드 
                                p= infodb.device_assetcode
                                h6 비고
                                p= infodb.device_info
                            section(class="section")
                                div(class="container")
                                    div(class="field is-grouped")
                                        p(class="control")
                                            a(class="button is-success" href="/device/") 확인
                                        p(class="control")
                                            a(class="button is-link" href="/device/"+infodb.uid+"/edit") 수정
                                        p(class="control")
                                            a(class="button is-danger" href="/device/"+infodb.uid+"/delete") 삭제
